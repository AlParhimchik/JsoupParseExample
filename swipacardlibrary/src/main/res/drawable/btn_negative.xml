<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <corners android:bottomRightRadius="10px" android:topRightRadius="10px" />
            <solid android:color="@color/negative_color" />
            >
        </shape>
    </item>
    <item android:state_activated="true">
        <shape>
            <corners android:bottomRightRadius="10px" android:topRightRadius="10px" />
            <solid android:color="@color/negative_color" />
            >
        </shape>
    </item>

    <item>
        <shape>
            <corners android:bottomRightRadius="10px" android:topRightRadius="10px" />
            <solid android:color="@color/btn_unchecked_color" />
            >
        </shape>
    </item>

</selector>